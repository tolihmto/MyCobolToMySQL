<Window x:Class="CobolToMySqlStudio.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CobolToMySqlStudio.UI"
        mc:Ignorable="d"
        Title="CobolToMySql Studio" Height="600" Width="1000">
    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem Content="{Binding StatusText}" />
        </StatusBar>
        <TabControl>
            <TabItem Header="Import Copybook">
                <StackPanel Margin="12">
                    <TextBlock Text="Select a COBOL copybook (.cpy/.txt) or XML metadata" FontWeight="Bold"/>
                    <WrapPanel Margin="0,8,0,0">
                        <Button Content="Open Copybook" Command="{Binding OpenCopybookCommand}" Margin="0,0,8,0"/>
                        <Button Content="Import XML" Command="{Binding ImportXmlCommand}"/>
                    </WrapPanel>
                    <TextBox Text="{Binding CopybookPath}" IsReadOnly="True" Margin="0,8,0,0"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Preview Layout">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <CheckBox Content="Show FILLER" IsChecked="{Binding ShowFiller}"/>
                    <TreeView Grid.Row="1" ItemsSource="{Binding RootNodes}">
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}"/>
                                    <TextBlock Text="  ("/>
                                    <TextBlock Text="{Binding Level}"/>
                                    <TextBlock Text=")  Offs="/>
                                    <TextBlock Text="{Binding Offset}"/>
                                    <TextBlock Text=", Len="/>
                                    <TextBlock Text="{Binding StorageLength}"/>
                                </StackPanel>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Grid>
            </TabItem>
            <TabItem Header="Generate Schema">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Table Name:" VerticalAlignment="Center"/>
                        <TextBox Width="240" Text="{Binding StagingTableName}" Margin="8,0,0,0"/>
                        <Button Content="Preview DDL" Command="{Binding PreviewDdlCommand}" Margin="8,0,0,0"/>
                        <Button Content="Apply to DB" Command="{Binding ApplyDdlCommand}" Margin="8,0,0,0"/>
                    </StackPanel>
                    <TextBox Grid.Row="1" Text="{Binding DdlPreview}" FontFamily="Consolas" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                </Grid>
            </TabItem>
            <TabItem Header="Import Data">
                <StackPanel Margin="12">
                    <WrapPanel>
                        <Button Content="Choose Data File" Command="{Binding ChooseDataFileCommand}" Margin="0,0,8,0"/>
                        <TextBox Width="400" Text="{Binding DataFilePath}" IsReadOnly="True"/>
                    </WrapPanel>
                    <ProgressBar Minimum="0" Maximum="100" Value="{Binding ImportProgress}" Height="18" Margin="0,8,0,0"/>
                    <Button Content="Run Import" Command="{Binding RunImportCommand}" Margin="0,8,0,0"/>
                    <ListBox ItemsSource="{Binding ImportErrors}"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Transform/Execute">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                    <TextBox Text="{Binding TransformDsl}" FontFamily="Consolas" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,8">
                        <Button Content="Generate SQL" Command="{Binding GenerateSqlCommand}"/>
                        <Button Content="Apply" Command="{Binding ApplyTransformCommand}" Margin="8,0,0,0"/>
                        <Button Content="Preview Results" Command="{Binding PreviewResultsCommand}" Margin="8,0,0,0"/>
                    </StackPanel>
                    <DataGrid Grid.Row="2" ItemsSource="{Binding PreviewRows}" AutoGenerateColumns="True" IsReadOnly="True"/>
                </Grid>
            </TabItem>
            <TabItem Header="Logs">
                <TextBox Margin="12" Text="{Binding Logs}" FontFamily="Consolas" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
