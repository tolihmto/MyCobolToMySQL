<Window x:Class="CobolToMySqlStudio.UI.ConnectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connection" Height="260" Width="420" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Server" Margin="0,2,8,2" VerticalAlignment="Center"/>
        <TextBox   Grid.Row="0" Grid.Column="1" Text="{Binding Server, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Port" Margin="0,8,8,2" VerticalAlignment="Center"/>
        <TextBox   Grid.Row="1" Grid.Column="1" Text="{Binding Port, UpdateSourceTrigger=PropertyChanged}" Margin="0,6,0,0"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Database" Margin="0,8,8,2" VerticalAlignment="Center"/>
        <TextBox   Grid.Row="2" Grid.Column="1" Text="{Binding Database, UpdateSourceTrigger=PropertyChanged}" Margin="0,6,0,0"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="User" Margin="0,8,8,2" VerticalAlignment="Center"/>
        <TextBox   Grid.Row="3" Grid.Column="1" Text="{Binding User, UpdateSourceTrigger=PropertyChanged}" Margin="0,6,0,0"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Password" Margin="0,8,8,2" VerticalAlignment="Center"/>
        <PasswordBox Grid.Row="4" Grid.Column="1" Margin="0,6,0,0" PasswordChanged="PasswordBox_PasswordChanged"/>

        <TextBlock Grid.Row="5" Grid.ColumnSpan="2" Margin="0,10,0,0" Foreground="Gray" Text="{Binding Status}"/>

        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Test" Command="{Binding TestCommand}" MinWidth="80"/>
            <Button Content="Save" Command="{Binding SaveCommand}" Margin="8,0,0,0" MinWidth="80"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}" Margin="8,0,0,0" MinWidth="80"/>
        </StackPanel>
    </Grid>
</Window>
